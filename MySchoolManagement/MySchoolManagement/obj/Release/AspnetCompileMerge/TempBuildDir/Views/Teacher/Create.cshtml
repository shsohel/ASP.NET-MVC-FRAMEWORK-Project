@model IEnumerable<MySchoolManagement.Models.Student>

@{

                ViewBag.Title = "Create";
                Layout = "~/Views/Shared/_DashboardLayout.cshtml";
}

<h2>Create</h2>

<div>
    <div class="row">
        <div class="col-md-6">
            <form id="Index" method="post" enctype="multipart/form-data" onsubmit="return AjaxPost(this)">

                <label> Class Name</label>
                <br />

                <label>Teacher Name : </label>
                <input id="TeacherName" name="TeacherName" class="form-control" placeholder="Teacher Name" />

                <label>Birth Date</label>
                <input id="BirthofDate" type="date" name="BirthofDate" class="form-control" placeholder="Birth of Date" />

                <label>Cell Phone No</label>
                <input id="CellPhoneNo" name="CellPhoneNo" class="form-control" placeholder="Cell Phone No" />

                <label>Confirm Phone No</label>
                <input id="ConfirmPhoneNumber" name="ConfirmPhoneNumber" class="form-control" placeholder="Cell Phone No" />


                <label>Email Address</label>
                <input id="EmailAddress" name="EmailAddress" class="form-control" placeholder="Email Address" />

                <label>Address</label>
                <input id="Address" name="Address" class="form-control" placeholder="Address" />

                <label>Photo</label>
                <input id="ImageUpload" name="ImageUpload" class="form-control" type="file" />
                <br />
                <button class="btn btn-success">Add Teacher</button>
            </form>
        </div>
    </div>
</div>

<script>
    function AjaxPost(formData) {
        var ajaxConfig = {
            type: "post",
            url: "/Teacher/SaveData",        ///Save Data by using Controller wtih Action
            data: new FormData(formData),
            success: function (result) {
                alert(result);
                window.location.href = "/Teacher/Index"  /// Redirect to page with controll and Action
            }
        }
        if ($(formData).attr('enctype') == "multipart/form-data") {
            ajaxConfig["contentType"] = false;
            ajaxConfig["processData"] = false;
        }
        $.ajax(ajaxConfig);
        return false;
    }
</script>
